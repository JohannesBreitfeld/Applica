<UserControl x:Class="Applica.Presentation.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Applica.Presentation.Views"
             xmlns:viewmodels="clr-namespace:Applica.Presentation.ViewModels"
             xmlns:converters="clr-namespace:Applica.Presentation.Converters"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="800"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Width="680"
                    Height="100"
                    Margin="20"
                    CornerRadius="15"
                    Background="{StaticResource secondaryBackground}"
                    Visibility="{Binding CanLoadSampleData, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button Width="660" 
                    Height="80"
                    Content="LOAD SAMPLE DATA"
                    FontWeight="SemiBold"
                    FontSize="24"
                    Background="{StaticResource secondaryBackground}"
                    Command="{Binding LoadSampleDataCommand}"
                    Visibility="{Binding CanLoadSampleData, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Border>
            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Background="{StaticResource secondaryBackground}"
                CornerRadius="15"
                Margin="20"
                Width="200"
                Height="300">
                    <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="25">
                        <TextBlock Text="YOU HAVE APPLIED TO"
                                   HorizontalAlignment="Center"
                                   Foreground="#E1E8F0"
                                   FontSize="24"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"/>
                        <TextBlock Text="{Binding NumberOfApplications}"
                                   HorizontalAlignment="Center"
                                   Foreground="#FFB74D"
                                   TextWrapping="Wrap"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                        <TextBlock Text="COMPANIES"
                                   HorizontalAlignment="Center"
                                   Foreground="#E1E8F0"
                                   FontSize="24"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"/>
                        </StackPanel>
                </Border>
                <Border Background="{StaticResource secondaryBackground}"
                CornerRadius="15"
                Margin="20"
                Width="200">
                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="25">
                    <TextBlock Text="YOU HAVE RECIEVED"
                        HorizontalAlignment="Center"
                        Foreground="#E1E8F0"
                        FontSize="24"
                        TextWrapping="Wrap"
                        FontWeight="SemiBold"
                        TextAlignment="Center"/>
                    <TextBlock Text="{Binding NumberOfOffers}"
                        HorizontalAlignment="Center"
                        Foreground="#4CAF50"
                        TextWrapping="Wrap"
                        FontSize="24"
                        FontWeight="Bold"/>
                    <TextBlock Text="OFFERS"
                        HorizontalAlignment="Center"
                        Foreground="#E1E8F0"
                        FontSize="24"
                        TextWrapping="Wrap"
                        FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
                <Border Background="{StaticResource secondaryBackground}"
                CornerRadius="15"
                Margin="20"
                Width="200">
                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="25">
                    <TextBlock Text="YOU HAVE RECIEVED"
                        HorizontalAlignment="Center"
                        Foreground="#E1E8F0"
                        FontSize="24"
                        TextWrapping="Wrap"
                        FontWeight="SemiBold"
                        TextAlignment="Center"/>
                    <TextBlock Text="{Binding NumberOfRejections}"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource error}"
                        TextWrapping="Wrap"
                        FontSize="24"
                        FontWeight="Bold"/>
                    <TextBlock Text="REJECTIONS"
                        HorizontalAlignment="Center"
                        Foreground="#E1E8F0"
                        FontSize="24"
                        TextWrapping="Wrap"
                        FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            </WrapPanel>
            <Border Background="{StaticResource secondaryBackground}"
                    CornerRadius="15"
                    Margin="20"
                    Height="100"
                    Width="680">
                <Button Width="660"
                        Height="80"
                        Background="{StaticResource secondaryBackground}">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="YOU HAVE "
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource primaryText}"/>
                    <TextBlock Text="{Binding NumberOfNotifications}"
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource primaryText}"/>
                    <TextBlock Text=" NOTIFICATIONS"
                               VerticalAlignment="Center"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource primaryText}"/>


                    <fa:IconImage Icon="Bell"
                                  IconFont="Solid"
                                  Height="35"
                                  Margin="5 0 0 0"
                                  Foreground="{StaticResource error}"/>
                    
                </StackPanel>
                </Button>
                
            </Border>
                    
        </StackPanel>
    </Grid>
</UserControl>
